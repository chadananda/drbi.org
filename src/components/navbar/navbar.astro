---
import Container from "@components/container.astro";
import { StickyHeader, Astronav, MenuItems, MenuIcon } from "astro-navbar";

import SiteLogo from "@components/siteLogo.astro";
import links from "@data/siteLinks.json";
const menuLinks = links.menuLinks;
---

<StickyHeader
  class="sticky top-0 border-b transition-all z-50"
  scrollY={50}
  defaultClass="py-2 border-transparent"
  activeClass="py-2 bg-white/80 border-gray-200 backdrop-blur-lg">
  <Container>
    <div class="flex flex-col justify-between items-center relative z-10"
      transition:animate="none">
      <Astronav>
        <div class="flex w-full items-center justify-between">
          <div id="logo" class="flex items-center">
            <SiteLogo />
          </div>

          <!-- Desktop nav - visible on md and up -->
          <nav class="hidden md:flex items-center gap-1 noprint">
            {menuLinks.map((item) => (
              <a href={item.path} data-astro-reload
                class="px-3 py-2 text-sm text-gray-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 transition focus-visible:ring-indigo-500 focus-visible:outline-none rounded-full">
                {item.title}
              </a>
            ))}
          </nav>

          <!-- Mobile hamburger - visible below md -->
          <div class="block md:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>

        <!-- Mobile menu - shown when hamburger clicked -->
        <MenuItems class="hidden w-full mt-2 md:hidden noprint">
          <ul class="flex flex-col">
            {menuLinks.map((item) => (
              <li>
                <a href={item.path} data-astro-reload
                  class="flex px-3 py-2 text-sm text-gray-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 transition focus-visible:ring-indigo-500 focus-visible:outline-none rounded-full">
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </MenuItems>
      </Astronav>
    </div>
  </Container>
</StickyHeader>
