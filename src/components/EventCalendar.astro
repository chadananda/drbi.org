import { Image } from "astro:assets";
import { transformS3Url } from '../utils/utils.js';
import fs from 'fs/promises';
import path from 'path';
import MarkdownIt from 'markdown-it';

// Initialize markdown renderer
const md = new MarkdownIt({
  html: false, // Disable HTML for security
  linkify: true, // Auto-convert URLs to links
  typographer: true // Enable smart quotes
});

// Read events directly from filesystem to ensure fresh data
// (Astro's content collection cache doesn't invalidate on API-driven file changes)
const eventsDir = path.join(process.cwd(), 'src/content/events');
const eventFiles = await fs.readdir(eventsDir);
const events = await Promise.all(
  eventFiles
    .filter(file => file.endsWith('.json'))
    .map(async (file) => {
      const filePath = path.join(eventsDir, file);
      const content = await fs.readFile(filePath, 'utf-8');
      const data = JSON.parse(content);
      return { id: file.replace('.json', ''), data };
    })
);

// Parse date strings as Arizona time (UTC-7, no DST)
// If no timezone is specified, assume Arizona time
// This ensures consistent parsing regardless of where the build runs (local vs Vercel UTC)
const parseArizonaDate = (dateStr: string): Date => {
  if (!dateStr) return new Date();
  // Check if the date string already has timezone info (Z, +XX:XX, -XX:XX)
  const hasTimezone = dateStr.includes('Z') ||
                      dateStr.includes('+') ||
                      /[-]\d{2}:?\d{2}$/.test(dateStr);
  if (!hasTimezone) {
    // Arizona is always UTC-7 (no DST)
    return new Date(dateStr + '-07:00');
  }
  return new Date(dateStr);
};

// Check if registration URL is valid (not empty, not site homepage)
const hasValidRegistrationUrl = (url: string): boolean => {
  if (!url || url.trim() === '') return false;
  const normalized = url.trim().toLowerCase();
  // Consider invalid if it's just the site URL (with or without trailing slash, http or https)
  return !normalized.match(/^https?:\/\/(www\.)?drbi\.org\/?$/);
};

// Always use the real current date for filtering
const referenceDate = new Date();

// Expand events with additionalDates into multiple display instances
const expandedEvents = [];

events.forEach(event => {
  if (!event.data.visible) return;

  // Add the primary event instance
  const primaryDate = parseArizonaDate(event.data.startDate);
  if (primaryDate > referenceDate) {
    expandedEvents.push({
      ...event,
      isPrimary: true,
      instanceIndex: 0,
      dateSource: 'primary'
    });
  }

  // Add instances for each additional date
  if (Array.isArray(event.data.additionalDates)) {
    event.data.additionalDates.forEach((additionalDate, index) => {
      const instanceDate = parseArizonaDate(additionalDate.startDate);
      if (instanceDate > referenceDate) {
        expandedEvents.push({
          ...event,
          data: {
            ...event.data,
            startDate: additionalDate.startDate,
            endDate: additionalDate.endDate
          },
          isPrimary: false,
          instanceIndex: index + 1,
          dateSource: 'additional'
        });
      }
    });
  }
});

// Sort all expanded events by date
let upcomingEvents = expandedEvents
  .sort((a, b) => parseArizonaDate(a.data.startDate).getTime() - parseArizonaDate(b.data.startDate).getTime());

const { view = 'cards', limit } = Astro.props; // 'cards', 'list', or 'list-full', optional limit

// Apply limit if provided
if (limit) {
  upcomingEvents = upcomingEvents.slice(0, limit);
}

const formatDate = (date) => {
  return parseArizonaDate(date).toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'America/Phoenix'
  });
};

const formatDateRange = (startDate, endDate) => {
  const start = parseArizonaDate(startDate);
  const end = parseArizonaDate(endDate);
  const tz = 'America/Phoenix'; // Arizona timezone (no DST)

  const startDateStr = start.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
    timeZone: tz
  });

  const endDateStr = end.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
    timeZone: tz
  });

  if (startDateStr === endDateStr) {
    return startDateStr;
  }

  return `${startDateStr} - ${endDateStr}`;
};

const formatTime = (date) => {
  return parseArizonaDate(date).toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
    timeZone: 'America/Phoenix'
  });
};

const formatPrice = (price) => {
  if (!price) return 'Free';
  if (price.low === price.high) {
    return `$${price.low}`;
  }
  return `$${price.low} - $${price.high}`;
};

// Convert straight quotes to curly quotes
const curlyQuotes = (text: string): string => {
  if (!text) return '';
  const openDouble = '\u201C';  // "
  const closeDouble = '\u201D'; // "
  const openSingle = '\u2018';  // '
  const closeSingle = '\u2019'; // '
  return text
    .replace(/(\s|^)"(\S)/g, '$1' + openDouble + '$2')
    .replace(/(\S)"(\s|$|[.,!?])/g, '$1' + closeDouble + '$2')
    .replace(/(\s|^)'(\S)/g, '$1' + openSingle + '$2')
    .replace(/(\S)'(\s|$|[.,!?])/g, '$1' + closeSingle + '$2')
    .replace(/(\w)'(\w)/g, '$1' + closeSingle + '$2');  // apostrophe
};

// Prepare display data for all events
const displayEvents = upcomingEvents.map(event => {
  const d = event.data;
  const hasValidReg = hasValidRegistrationUrl(d.registrationUrl);
  const isMinimal = !event.isPrimary; // Show secondary instances in minimal form

  return {
    ...event,
    isMinimal,
    display: {
      name: curlyQuotes(d.name),
      shortDescription: curlyQuotes(d.shortDescription || ''),
      fullDescription: curlyQuotes(d.fullDescription || ''),
      shortDescriptionHtml: md.render(d.shortDescription || ''),
      fullDescriptionHtml: md.render(d.fullDescription || ''),
      // Show truncated preview for all events
      preview: curlyQuotes(
        d.fullDescription ? d.fullDescription.slice(0, 400) + '...' : d.shortDescription || 'Join us for this transformative learning experience.'
      ),
      previewHtml: md.render(
        d.fullDescription ? d.fullDescription.slice(0, 400) + '...' : d.shortDescription || ''
      ),
      // Flag if description is long enough to need expansion
      isLongDescription: !hasValidReg && (d.fullDescription || '').length > 400,
      dateRange: formatDateRange(d.startDate, d.endDate),
      time: formatTime(d.startDate),
      price: formatPrice(d.price),
      month: parseArizonaDate(d.startDate).toLocaleDateString('en-US', { month: 'short', timeZone: 'America/Phoenix' }),
      day: parseArizonaDate(d.startDate).toLocaleDateString('en-US', { day: 'numeric', timeZone: 'America/Phoenix' }),
      mainImage: transformS3Url(d.mainImage, 450, 300),
      mainImageLarge: transformS3Url(d.mainImage, 600, 400),
      teacherImage: d.teacherImage ? transformS3Url(d.teacherImage, 200) : null,
      teacherImageLarge: d.teacherImage ? transformS3Url(d.teacherImage, 180) : null,
    }
  };
});

