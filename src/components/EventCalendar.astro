import { Image } from "astro:assets";
import { transformS3Url } from '../utils/utils.js';
import fs from 'fs/promises';
import path from 'path';

// Read events directly from filesystem to ensure fresh data
// (Astro's content collection cache doesn't invalidate on API-driven file changes)
const eventsDir = path.join(process.cwd(), 'src/content/events');
const eventFiles = await fs.readdir(eventsDir);
const events = await Promise.all(
  eventFiles
    .filter(file => file.endsWith('.json'))
    .map(async (file) => {
      const filePath = path.join(eventsDir, file);
      const content = await fs.readFile(filePath, 'utf-8');
      const data = JSON.parse(content);
      return { id: file.replace('.json', ''), data };
    })
);

// Always use the real current date for filtering
const referenceDate = new Date();

let upcomingEvents = events
  .filter(e => e.data.visible !== false && new Date(e.data.startDate) > referenceDate) // Only show visible events
  .sort((a, b) => new Date(a.data.startDate).getTime() - new Date(b.data.startDate).getTime());


const { view = 'cards', limit } = Astro.props; // 'cards', 'list', or 'list-full', optional limit

// Apply limit if provided
if (limit) {
  upcomingEvents = upcomingEvents.slice(0, limit);
}

const formatDate = (date) => {
  return new Date(date).toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const formatDateRange = (startDate, endDate) => {
  const start = new Date(startDate);
  const end = new Date(endDate);
  
  const startDateStr = start.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short', 
    day: 'numeric'
  });
  
  const endDateStr = end.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric'
  });
  
  if (startDateStr === endDateStr) {
    return startDateStr;
  }
  
  return `${startDateStr} - ${endDateStr}`;
};

const formatTime = (date) => {
  return new Date(date).toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true
  });
};

const formatPrice = (price) => {
  if (!price) return 'Free';
  if (price.low === price.high) {
    return `$${price.low}`;
  }
  return `$${price.low} - $${price.high}`;
};

// Convert straight quotes to curly quotes
const curlyQuotes = (text: string): string => {
  if (!text) return '';
  const openDouble = '\u201C';  // "
  const closeDouble = '\u201D'; // "
  const openSingle = '\u2018';  // '
  const closeSingle = '\u2019'; // '
  return text
    .replace(/(\s|^)"(\S)/g, '$1' + openDouble + '$2')
    .replace(/(\S)"(\s|$|[.,!?])/g, '$1' + closeDouble + '$2')
    .replace(/(\s|^)'(\S)/g, '$1' + openSingle + '$2')
    .replace(/(\S)'(\s|$|[.,!?])/g, '$1' + closeSingle + '$2')
    .replace(/(\w)'(\w)/g, '$1' + closeSingle + '$2');  // apostrophe
};

// Prepare display data for each event
const displayEvents = upcomingEvents.map(event => {
  const d = event.data;
  return {
    ...event,
    display: {
      name: curlyQuotes(d.name),
      shortDescription: curlyQuotes(d.shortDescription || ''),
      fullDescription: curlyQuotes(d.fullDescription || ''),
      preview: curlyQuotes(d.fullDescription ? d.fullDescription.slice(0, 400) + '...' : d.shortDescription || 'Join us for this transformative learning experience.'),
      dateRange: formatDateRange(d.startDate, d.endDate),
      time: formatTime(d.startDate),
      price: formatPrice(d.price),
      month: new Date(d.startDate).toLocaleDateString('en-US', { month: 'short' }),
      day: new Date(d.startDate).getDate(),
      mainImage: transformS3Url(d.mainImage, 450, 300),
      mainImageLarge: transformS3Url(d.mainImage, 600, 400),
      teacherImage: d.teacherImage ? transformS3Url(d.teacherImage, 200) : null,
      teacherImageLarge: d.teacherImage ? transformS3Url(d.teacherImage, 180) : null,
    }
  };
});

