<script>
  // Hide events that have passed since the static build
  function hideExpiredEvents() {
    const now = new Date();
    const eventElements = document.querySelectorAll('[data-event-start]');

    eventElements.forEach((element) => {
      const startDate = element.getAttribute('data-event-start');
      if (startDate) {
        const eventDate = new Date(startDate);
        if (eventDate <= now) {
          element.classList.add('event-expired');
        }
      }
    });
  }

  // Run on page load
  hideExpiredEvents();

  // Toggle description expansion
  window.toggleDescription = function(eventId) {
    const previewEl = document.querySelector(`[data-event-id="${eventId}"].event-preview-text`);
    const buttonEl = document.querySelector(`[data-event-id="${eventId}"].show-more-btn`);

    if (!previewEl || !buttonEl) return;

    const isExpanded = buttonEl.classList.contains('expanded');
    const previewHtml = previewEl.getAttribute('data-preview-html');
    const fullHtml = previewEl.getAttribute('data-full-html');

    if (isExpanded) {
      // Collapse
      previewEl.innerHTML = previewHtml;
      buttonEl.classList.remove('expanded');
      buttonEl.querySelector('.btn-text').textContent = 'Show More';
      buttonEl.querySelector('.btn-icon').textContent = '‚Üì';
    } else {
      // Expand
      previewEl.innerHTML = fullHtml;
      buttonEl.classList.add('expanded');
      buttonEl.querySelector('.btn-text').textContent = 'Show Less';
      buttonEl.querySelector('.btn-icon').textContent = '‚Üë';
    }
  };

  // Toggle recurring event dates
  window.toggleRecurringDates = function(groupId) {
    const collapsedEl = document.querySelector(`.dates-collapsed[data-group-id="${groupId}"]`);
    const expandedEl = document.querySelector(`.dates-expanded[data-group-id="${groupId}"]`);

    if (!collapsedEl || !expandedEl) return;

    const isExpanded = expandedEl.style.display !== 'none';

    if (isExpanded) {
      // Collapse
      collapsedEl.style.display = 'block';
      expandedEl.style.display = 'none';
    } else {
      // Expand
      collapsedEl.style.display = 'none';
      expandedEl.style.display = 'block';
    }
  };
</script>

