---
export const prerender = false;

import AdminLayout from '@layouts/AdminLayout.astro';
import { getTopics, getTopic, updateTopic } from '@utils/utils.js';

const user = Astro.locals?.user;
// Auth handled by middleware - user is guaranteed to be valid here

// Check for the 'importkey' parameter in the query
const importkey = (new URL(Astro.request.url)).searchParams.get('importkey');
if (importkey) {
  console.log('importing topic: ', importkey);
  let topic = await getTopic(importkey);
  delete topic.type;
  await updateTopic(topic);
  // Redirect to clean the URL
  const thisurl = (new URL(Astro.request.url)).toString().split('?')[0]; // remove params
  return Astro.redirect(thisurl);
}

const topics = await getTopics();

// Group topics by type for better organization
const systemTopics = topics.filter(t => t.type);
const customTopics = topics.filter(t => !t.type);
---

<AdminLayout title="Topics Management" user={user}>
  <div class="max-w-6xl mx-auto px-6 py-6">
    <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Topics & FAQs</h1>
        <p class="text-gray-600">Manage content topics and automatically generated FAQ pages</p>
      </div>
      <div>
        <a href="/admin/topic/add" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
          <span>‚ûï</span> Add Topic
        </a>
      </div>
    </div>
  </div>

  <!-- Overview Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
    <div class="bg-white border border-slate-200 rounded-xl p-6 text-center shadow-sm">
      <h3 class="text-3xl font-bold text-blue-600 mb-2">{topics.length}</h3>
      <p class="text-slate-600 font-medium">Total Topics</p>
    </div>
    <div class="bg-white border border-slate-200 rounded-xl p-6 text-center shadow-sm">
      <h3 class="text-3xl font-bold text-blue-600 mb-2">{customTopics.length}</h3>
      <p class="text-slate-600 font-medium">Custom Topics</p>
    </div>
    <div class="bg-white border border-slate-200 rounded-xl p-6 text-center shadow-sm">
      <h3 class="text-3xl font-bold text-blue-600 mb-2">{systemTopics.length}</h3>
      <p class="text-slate-600 font-medium">System Topics</p>
    </div>
  </div>

  <!-- System Topics (if any) -->
  {systemTopics.length > 0 && (
    <div class="bg-white border border-slate-200 rounded-xl p-8 mb-8 shadow-sm">
      <div class="border-b border-slate-200 pb-4 mb-8">
        <h3 class="text-xl font-semibold text-slate-800 mb-2">System Topics</h3>
        <p class="text-slate-600">These topics are imported from external sources and can be imported to your site.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {systemTopics.map(topic => (
          <div class="border border-amber-200 bg-amber-50 rounded-lg p-6 transition-all hover:border-amber-300 hover:shadow-md">
            <div class="w-20 h-20 rounded-full overflow-hidden mx-auto mb-4 border-4 border-white shadow-md">
              <img src={topic.image || `https://picsum.photos/seed/${topic.id}/120`} alt={topic.name} class="w-full h-full object-cover" />
            </div>
            
            <div class="text-center mb-6">
              <h4 class="text-lg font-semibold text-slate-800 mb-2">{topic.name}</h4>
              <p class="text-blue-600 font-medium mb-3">{topic.title}</p>
              <p class="text-sm text-slate-600 leading-relaxed mb-4">{topic.description}</p>
              
              <div class="flex justify-center mb-4">
                <span class="bg-amber-200 text-amber-800 px-3 py-1 rounded-full text-xs font-semibold uppercase">{topic.type}</span>
              </div>
            </div>
            
            <div class="flex justify-center">
              <a href={`?importkey=${topic.id}`} class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                üì• Import
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Custom Topics -->
  <div class="bg-white border border-slate-200 rounded-xl p-8 mb-8 shadow-sm">
    <div class="border-b border-slate-200 pb-4 mb-8">
      <h3 class="text-xl font-semibold text-slate-800 mb-2">Your Topics</h3>
      <p class="text-slate-600">Custom topics that organize your content and generate FAQ pages.</p>
    </div>
    
    {customTopics.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {customTopics.map(topic => (
          <div class="border border-slate-200 bg-slate-50 rounded-lg p-6 transition-all hover:border-blue-300 hover:shadow-md">
            <div class="w-20 h-20 rounded-full overflow-hidden mx-auto mb-4 border-4 border-white shadow-md">
              <img src={topic.image || `https://picsum.photos/seed/${topic.id}/120`} alt={topic.name} class="w-full h-full object-cover" />
