---
export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';

// Check if there's an upload result from the API
const url = new URL(Astro.request.url);
const uploadResult = url.searchParams.get('result');
const uploadError = url.searchParams.get('error');
const uploadMessage = url.searchParams.get('message');
---

<AdminLayout title="Analytics Import" user={Astro.locals?.user}>
  <div class="max-w-4xl mx-auto px-6 py-6">
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
          <span class="text-white text-xl">üìä</span>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Analytics Import</h1>
      </div>
      <p class="text-gray-600">Import historical analytics data from Vercel Analytics CSV exports</p>
    </div>

    <!-- Upload Result Messages -->
    {uploadResult === 'success' && (
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center gap-2">
          <span class="text-green-500 text-xl">‚úÖ</span>
          <h3 class="font-semibold text-green-800">Upload Successful</h3>
        </div>
        <p class="text-green-700 mt-1">{uploadMessage || 'CSV data has been imported successfully.'}</p>
      </div>
    )}

    {uploadError && (
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-center gap-2">
          <span class="text-red-500 text-xl">‚ùå</span>
          <h3 class="font-semibold text-red-800">Upload Failed</h3>
        </div>
        <p class="text-red-700 mt-1">{uploadError}</p>
      </div>
    )}

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Upload Form -->
      <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Upload Vercel Analytics CSV</h2>
        
        <form id="csvUploadForm" enctype="multipart/form-data" method="POST" action="/api/analytics/import">
          <div class="mb-6">
            <label for="csvFile" class="block text-sm font-medium text-gray-700 mb-2">
              Select CSV File
            </label>
            <input 
              type="file" 
              id="csvFile" 
              name="csvFile" 
              accept=".csv"
              required
              class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 border border-gray-300 rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <p class="text-xs text-gray-500 mt-1">Upload your Vercel Analytics CSV export file</p>
          </div>

          <div class="mb-6">
            <label for="dataSource" class="block text-sm font-medium text-gray-700 mb-2">
              Data Source
            </label>
            <select 
              id="dataSource" 
              name="dataSource" 
              required
              class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="vercel">Vercel Analytics</option>
              <option value="other">Other Analytics Platform</option>
            </select>
          </div>

          <div class="mb-6">
            <label for="dateRange" class="block text-sm font-medium text-gray-700 mb-2">
              Date Range Description
            </label>
            <input 
              type="text" 
              id="dateRange" 
              name="dateRange" 
              placeholder="e.g., January 1-31, 2024"
              class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
            <p class="text-xs text-gray-500 mt-1">Optional: Describe the date range covered by this data</p>
          </div>

          <button 
            type="submit" 
            id="uploadButton"
            class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            <span id="uploadButtonText">Upload CSV</span>
            <span id="uploadSpinner" class="hidden">
              <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Uploading...
            </span>
          </button>
        </form>
      </div>

      <!-- Instructions -->
      <div class="bg-gray-50 border border-gray-200 rounded-xl p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">How to Export from Vercel</h2>
        
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold flex-shrink-0">1</div>
            <div>
              <p class="font-medium text-gray-900">Go to your Vercel project dashboard</p>
              <p class="text-sm text-gray-600">Navigate to your project in the Vercel dashboard</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold flex-shrink-0">2</div>
            <div>
              <p class="font-medium text-gray-900">Open Analytics section</p>
              <p class="text-sm text-gray-600">Click on the "Analytics" tab in your project</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold flex-shrink-0">3</div>
            <div>
              <p class="font-medium text-gray-900">Export CSV</p>
              <p class="text-sm text-gray-600">Look for an export or download button to get your CSV data</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold flex-shrink-0">4</div>
            <div>
              <p class="font-medium text-gray-900">Upload here</p>
              <p class="text-sm text-gray-600">Select the downloaded CSV file and upload it using the form</p>
            </div>
          </div>
        </div>

        <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div class="flex items-start gap-2">
            <span class="text-yellow-500 text-lg">üí°</span>
            <div>
              <p class="font-medium text-yellow-800">Migration Strategy</p>
              <p class="text-sm text-yellow-700">Import your historical Vercel data to bridge the gap while PostHog accumulates new data. After 30 days, you'll have sufficient PostHog data to phase out the imported data.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Current Status -->
    <div class="mt-8 bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Import Status</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-900" id="importedFiles">0</div>
          <div class="text-sm text-gray-600">Files Imported</div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-900" id="totalRecords">0</div>
          <div class="text-sm text-gray-600">Total Records</div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-900" id="dateRange">-</div>
          <div class="text-sm text-gray-600">Date Range</div>
        </div>
      </div>

      <div class="mt-4">
        <button 
          onclick="loadImportStatus()"
          class="text-blue-600 hover:text-blue-700 text-sm font-medium"
        >
          Refresh Status
        </button>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
// Handle form submission with loading state
document.getElementById('csvUploadForm').addEventListener('submit', function() {
  const button = document.getElementById('uploadButton');
  const buttonText = document.getElementById('uploadButtonText');
  const spinner = document.getElementById('uploadSpinner');
  
  button.disabled = true;
  buttonText.classList.add('hidden');
  spinner.classList.remove('hidden');
});

// Load import status
async function loadImportStatus() {
  try {
    const response = await fetch('/api/analytics/status');
    if (response.ok) {
      const data = await response.json();
      
      document.getElementById('importedFiles').textContent = data.importedFiles || 0;
      document.getElementById('totalRecords').textContent = data.totalRecords || 0;
      document.getElementById('dateRange').textContent = data.dateRange || '-';
    }
  } catch (error) {
    console.error('Failed to load import status:', error);
  }
}

// Load status on page load
document.addEventListener('DOMContentLoaded', loadImportStatus);
</script>
</AdminLayout>