        await doRefresh(true);
      }
    });

    // Shared refresh function
    async function doRefresh(includeImages) {
      const button = includeImages
        ? document.getElementById('refresh-with-images')
        : document.getElementById('refresh-from-eventbrite');

      const originalText = button.innerHTML;
      button.disabled = true;
      button.innerHTML = includeImages
        ? '‚è≥ Re-downloading images...'
        : '‚è≥ Syncing...';

      try {
        const response = await fetch(`${window.location.origin}/api/events`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'force-refresh',
            eventData: {
              id: document.querySelector('[data-event-id]')?.dataset?.eventId,
              redownloadImages: includeImages
            },
            sessionid: sessionid
          })
        });

        if (response.ok) {
          const result = await response.json();
          alert(result.message || 'Event refreshed from Eventbrite successfully!');
          window.location.reload();
        } else {
          const errorText = await response.text();
          alert('Failed to refresh event: ' + errorText);
        }
      } catch (error) {
        console.error('Refresh error:', error);
        alert('Error refreshing from Eventbrite: ' + error.message);
      } finally {
        button.disabled = false;
        button.innerHTML = originalText;
      }
    }

