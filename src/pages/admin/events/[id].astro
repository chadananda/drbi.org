  <script>
    // Session ID for API calls (will be set when DOM loads)
    let sessionid;

    // Track uploads in progress
    let uploadsInProgress = 0;

    // Helper function for S3 to imgix URL transformation
    const imgixBaseUrl = 'https://drbi.imgix.net';
    const transformS3Url = (url, width = null, height = null, format = 'webp', quality = 80) => {
      if (!url || !url.includes('.s3.')) return url;
      try {
        const imagePath = new URL(url).pathname;
        let params = [];
        if (width) params.push(`w=${width}`);
        if (height) params.push(`h=${height}`);
        params.push(`fm=${format}`, `q=${quality}`, `fit=crop`, `crop=faces`);
        if (width && width < 400) params.push('usm=20&usmrad=20');
        else params.push('sharp=20');
        return `${imgixBaseUrl}${imagePath}?${params.join('&')}`;
      } catch { return url; }
    };

    // Image upload functionality
    function setupImageUpload(inputId, hiddenId, previewId) {
      const fileInput = document.getElementById(inputId);
      const hiddenInput = document.getElementById(hiddenId);
      const preview = document.getElementById(previewId);
      const previewImg = document.getElementById(previewId + 'Img');

      if (!fileInput) return;

      fileInput.addEventListener('change', async function(e) {
        const file = e.target.files[0];
        if (!file) return;

        // Mark upload as in progress
        uploadsInProgress++;
        const saveButton = document.querySelector('button[type="submit"]');
        if (saveButton) {
          saveButton.disabled = true;
          saveButton.textContent = 'Uploading image...';
        }

        console.log('üîÑ Starting upload process for file:', file.name);
        console.log('üîë Session ID:', sessionid ? sessionid.substring(0, 20) + '...' : 'NO SESSION');

        // Convert file to base64
        const reader = new FileReader();

        reader.onerror = function(error) {
          console.error('‚ùå FileReader error:', error);
          alert('Failed to read file: ' + error.message);
          // Re-enable save button
          uploadsInProgress--;
          if (uploadsInProgress <= 0) {
            uploadsInProgress = 0;
            const saveButton = document.querySelector('button[type="submit"]');
            if (saveButton) {
              saveButton.disabled = false;
              saveButton.textContent = 'Save Changes';
            }
          }
        };

        reader.onload = async function(event) {
          try {
            console.log('üìä File converted to base64, starting S3 upload...');
            const base64Data = event.target.result;

            // Upload to S3 with timestamp to avoid cache issues
            const eventId = document.querySelector('[data-event-id]')?.dataset?.eventId || 'edit';
            const timestamp = Date.now();
            const s3Key = `events/${eventId}-${inputId === 'mainImageFile' ? 'main' : 'teacher'}-${timestamp}.${file.name.split('.').pop()}`;
            console.log('üì§ Uploading to S3 key:', s3Key);

            const response = await fetch('/api/upload_s3', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                filedata: base64Data.split(',')[1],
                s3key: s3Key,
                sessionid: sessionid
              })
            });

            console.log('üì¨ Response status:', response.status);

            if (response.ok) {
              const data = await response.json();
              console.log('üì¶ S3 response data:', data);

              if (data.s3url) {
                console.log('‚úÖ S3 URL received:', data.s3url);

                // Set the S3 URL in hidden input
                hiddenInput.value = data.s3url;

                // Show preview with imgix thumbnail (add cache buster)
                const imgixUrl = transformS3Url(data.s3url, 200, 150) + `&_cb=${Date.now()}`;
                previewImg.src = imgixUrl;
                preview.style.display = 'block';

                // Hide current image if it exists
                const currentImage = fileInput.parentNode.querySelector('.current-image');
                if (currentImage) currentImage.style.display = 'none';

                // Show success feedback
                console.log('‚úÖ Image uploaded successfully in edit form:', data.s3url);
                console.log('üíæ Hidden input value is now:', hiddenInput.value);
                console.log('üéâ Preview should now be visible in edit form!');
              } else {
                throw new Error('No S3 URL returned from server');
              }
            } else {
              const errorText = await response.text();
              console.error('‚ùå Upload failed:', response.status, errorText);
              alert('Upload failed: ' + response.status + ' - ' + errorText);
            }
          } catch (error) {
            console.error('‚ùå Upload error:', error);
            alert('Failed to upload image: ' + error.message);
          } finally {
            // Re-enable save button
            uploadsInProgress--;
            if (uploadsInProgress <= 0) {
              uploadsInProgress = 0;
              const saveButton = document.querySelector('button[type="submit"]');
              if (saveButton) {
                saveButton.disabled = false;
                saveButton.textContent = 'Save Changes';
              }
            }
          }
        };
        reader.readAsDataURL(file);
      });
    }

