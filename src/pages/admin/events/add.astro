    // Helper function for S3 to imgix URL transformation
    const imgixBaseUrl = 'https://drbi.imgix.net';
    const transformS3Url = (url, width = null, height = null, format = 'webp', quality = 80) => {
      if (!url || !url.includes('.s3.')) return url;
      try {
        const imagePath = new URL(url).pathname;
        let params = [];
        if (width) params.push(`w=${width}`);
        if (height) params.push(`h=${height}`);
        params.push(`fm=${format}`, `q=${quality}`, `fit=crop`, `crop=faces`);
        if (width && width < 400) params.push('usm=20&usmrad=20');
        else params.push('sharp=20');
        return `${imgixBaseUrl}${imagePath}?${params.join('&')}`;
      } catch { return url; }
    };
    
    // Eventbrite import functionality
    document.getElementById('importEventbrite')?.addEventListener('click', async function() {
