        const filteredEvents = allEventsData.filter(event => !isEventOld(event));
        renderEventsTable(filteredEvents);
        toggleText.textContent = 'Show Old Events';
      }
    });
    
    // Sync external events
    document.getElementById('sync-external')?.addEventListener('click', async () => {
      const button = document.getElementById('sync-external');
      const originalText = button.innerHTML;
      button.innerHTML = '<span class="icon">‚è≥</span> Syncing...';
      button.disabled = true;
      
      try {
        const response = await fetch('/api/events', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'sync-external', sessionid })
        });
        
        if (response.ok) {
          const result = await response.json();
          if (result.hasChanges) {
            alert('Events synced successfully! Refreshing page...');
            window.location.reload();
          } else {
            alert('No new events found.');
          }
        } else {
          alert('Failed to sync events. Please try again.');
        }
      } catch (error) {
        console.error('Sync error:', error);
        alert('Error syncing events. Check console for details.');
      } finally {
        button.innerHTML = originalText;
        button.disabled = false;
      }
    });
    
    // Toggle visibility
    document.querySelectorAll('.toggle-visibility').forEach(button => {
      button.addEventListener('click', async () => {
        const eventId = button.dataset.eventId;

        try {
          const response = await fetch('/api/events', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              action: 'toggle-visibility',
              eventData: { id: eventId },
              sessionid 
            })
          });
          
          if (response.ok) {
            const result = await response.json();
            button.className = `inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors cursor-pointer toggle-visibility ${result.visible ? 'text-gray-600 bg-gray-50 hover:bg-gray-100' : 'text-orange-600 bg-orange-50 hover:bg-orange-100'}`;
            button.innerHTML = result.visible ? 'üëÅÔ∏è Hide' : 'üôà Show';
            button.title = result.visible ? 'Hide event' : 'Show event';

            // Update card styling
            const card = button.closest('.event-card');
            if (card) {
              if (result.visible) {
                card.classList.remove('bg-orange-50', 'border-orange-300', 'border-dashed', 'border-2', 'opacity-60');
                card.classList.add('bg-white', 'border-gray-200', 'border');
              } else {
                card.classList.remove('bg-white', 'border-gray-200', 'border');
                card.classList.add('bg-orange-50', 'border-orange-300', 'border-dashed', 'border-2', 'opacity-60');
              }
            }

            // Update or add/remove HIDDEN badge
            const titleContainer = card?.querySelector('h3')?.parentElement;
            if (titleContainer) {
              const existingBadge = titleContainer.querySelector('.hidden-badge');
              if (result.visible && existingBadge) {
                existingBadge.remove();
              } else if (!result.visible && !existingBadge) {
                const badge = document.createElement('span');
                badge.className = 'hidden-badge inline-flex items-center px-2 py-1 text-xs font-bold text-orange-700 bg-orange-100 border border-orange-300 rounded';
                badge.innerHTML = 'üôà HIDDEN';
                titleContainer.appendChild(badge);
              }
            }
          } else {
            const errorText = await response.text();
            console.error('Toggle failed:', response.status, errorText);
            alert(`Failed to toggle visibility: ${errorText}`);
          }
        } catch (error) {
          console.error('Toggle error:', error);
          alert('Error toggling visibility. Check console for details.');
        }
      });
    });
    
    // Delete manual events
    document.querySelectorAll('.delete-event').forEach(button => {
      button.addEventListener('click', async () => {
        const eventId = button.dataset.eventId;
        
        if (!confirm('Are you sure you want to delete this event? This cannot be undone.')) {
          return;
        }
        
        try {
          const response = await fetch('/api/events', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
              action: 'delete', 
              eventData: { id: eventId },
              sessionid 
            })
          });
          
          if (response.ok) {
            // Remove event card from the page
            const eventCard = button.closest('.bg-white.border.border-gray-200');
            if (eventCard) {
              eventCard.remove();
            }
            alert('Event deleted successfully.');
            // Refresh the page to update counters
            window.location.reload();
          } else {
            const errorText = await response.text();
            console.error('Delete failed:', response.status, errorText);
            alert('Failed to delete event. Please try again.');
          }
        } catch (error) {
          console.error('Delete error:', error);
          alert('Error deleting event. Check console for details.');
        }
      });
    });
  </script>

