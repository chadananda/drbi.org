---
import Card from "@components/card.astro";
import Container from "@components/container.astro";
import Review from "@components/review.astro";

const testimonials = [
  {
    name: "Taylor Johnson",
    title: "Aspiring Artist",
    image: "https://images.unsplash.com/photo-1705760710679-292e1f380d7b?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    text: "Tim's Industrial Ceramics Workshop opened a new world of creativity for me. The hands-on experience and Tim's expert guidance helped me discover my passion for ceramic art. It's was a truly empowering workshop.",
  },
  {
    name: "Alex Carter",
    title: "Youth Leader",
    image: "https://source.unsplash.com/random",
    text: "Participating in Chad's Dawn-Breakers Challenge was a unique experience. It's not just about history and stories; it's about sacrifice and the real meaning of true religion. This challenge has deeply impacted how I view my Faith.",
  },
  {
    name: "Grace Kim",
    title: "Budding Author",
    image: "https://source.unsplash.com/random",
    text: "Anne Perry's 'Write Life' workshop was a game-changer for my writing. Her insights and the supportive community she fosters have given me the confidence and skills to bring my stories to life. This program is a must for any aspiring writer.",
  },
  {
    name: "Jordan Smith",
    title: "Future Leader",
    image: "https://source.unsplash.com/random",
    text: "Wade's Transformative Leadership program for kids was incredible. It's not just about leading; it's about understanding, empathy, and making a positive impact. As a young person, this program has given me the tools and confidence to be a changemaker in my community.",
  },
  {
    name: "Oliver Martinez",
    title: "Community Organizer",
    image: "https://source.unsplash.com/random",
    text: "The DRBI community has been a beacon of light in my journey of spiritual and personal growth. The programs are not only enlightening but also provide practical tools for making a positive difference in the world.",
  },
  {
    name: "Emily Watson",
    title: "Educator and Lifelong Learner",
    image: "https://source.unsplash.com/random",
    text: "DRBI offers a unique blend of spiritual depth and practical application. The learning environment is nurturing, and transformative. It's a place where hearts and minds expand together.",
  },
];

---

<Container>
  <div class="mt-24">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight text-center">
        Encouraging Words
    </h2>
  </div>
</Container>

<div class="mt-5 relative overflow-x-clip ">
  <div
    class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-100 right-1/3 -top-10">
  </div>
  <div
    class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-100 right-1/3 translate-x-2/3 top-10">
  </div>
  <div class="relative md:flex gap-10 overflow-hidden py-5 group">
    <div
      class="md:motion-safe:animate-marquee w-auto py-5 overflow-x-auto flex flex-nowrap min-w-full shrink-0 items-stretch gap-10 snap-x snap-mandatory px-5">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
    <!--  ↓↓ Shadow DOM to make the animation smooth (clone) ↓↓ -->
    <div
      class="md:motion-safe:animate-marquee hidden md:motion-reduce:hidden md:flex min-w-full shrink-0 items-center gap-10">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
  </div>
</div>
